<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/favoritesLayout">

    <TextView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_circle_white"
        android:fontFamily="@font/fa_solid900"
        android:text="\uf005"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/favoriteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:fontFamily="@font/noto_sans_font_family"
        android:textFontWeight="800"/>

    <TextView
        android:id="@+id/favoritePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_font_family"
        android:textFontWeight="800"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/favoritePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_font_family"
        android:textFontWeight="600"
        android:layout_gravity="center"/>

</LinearLayout>
