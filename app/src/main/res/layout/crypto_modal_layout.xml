<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standart_bluegrey">


    <!-- Ajoutez d'autres vues pour afficher les informations (prix, pourcentage, etc.) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/headerModal"
        android:weightSum="4"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageModal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar"
            android:text="Nom de la cryptomonnaie"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/nameModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bitcoin"
            android:layout_weight="2"
            android:textSize="22sp"
            android:fontFamily="@font/noto_sans_font_family"
            android:textFontWeight="800"
            />

        <TextView
            android:id="@+id/closeModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uf057"
            android:typeface="normal"
            android:padding="10dp"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fa_solid900"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="end"
            />
    </LinearLayout>

       <TextView
           android:id="@+id/otherInfos"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Autres informations"

           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/noto_sans_font_family"
           android:textFontWeight="800"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/otherInfos"
           android:orientation="vertical"
           android:background="@drawable/button_background_white"
           android:layout_margin="20dp"
           android:padding="20dp"
           >
           <TextView
               android:id="@+id/priceModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Valeur en euros : 32654 eur"
               android:layout_marginBottom="8dp"
               />
           <TextView
               android:id="@+id/percentModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Variation du prix en %"
               android:layout_marginBottom="8dp"
               />
           <TextView
               android:id="@+id/rankModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Classement par capitalisation"
               android:layout_marginBottom="8dp"
               />
           <TextView
               android:id="@+id/capitalisationModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Capitalisation boursière"
               android:layout_marginBottom="8dp"
               />
           <TextView
               android:id="@+id/quantityModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Quantité en circulation"
               android:layout_marginBottom="8dp"
               />
           <TextView
               android:id="@+id/updateModal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Dernière actualisation"
               android:layout_marginBottom="8dp"
               />

       </LinearLayout>

   </RelativeLayout>
