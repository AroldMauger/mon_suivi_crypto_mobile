<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07297C"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp">

        <!-- Bouton S'INSCRIRE -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'INSCRIRE"
            android:background="@drawable/button_background_lightblue"
            style="@style/CustomButtonStyleLightBlue"
            android:layout_marginEnd="16dp"
            android:padding="10dp"/>

    </LinearLayout>

    <!-- Titre et Logo -->
    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON SUIVI CRYPTO"
            android:textSize="26sp"
            android:textColor="#E9B522"
            android:fontFamily="@font/noto_sans_font_family"
            android:textFontWeight="800" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_crypto"
            android:contentDescription="@string/logo_description"/>
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Une application performante pour suivre les cours des cryptomonnaies"
        android:textSize="22sp"
        android:textColor="@color/light_blue"
        android:gravity="center"
        android:fontFamily="@font/noto_sans_font_family"
        android:textFontWeight="700"
        android:padding="16dp"/>

    <!-- Formulaire de connexion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="#99B0F3"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_font_family"
            android:textFontWeight="800"
            android:layout_marginBottom="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom d'utilisateur"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans_font_family"
            android:textFontWeight="800"
            android:background="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans_font_family"
            android:textFontWeight="800"
            android:background="@color/white"/>

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            style="@style/CustomButtonStyleDarkGrey"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_darkgrey"/>


    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#475460">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_crypto"
            android:contentDescription="@string/logo_description"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentions lÃ©gales"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/noto_sans_font_family" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactez-nous"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/noto_sans_font_family" />
    </LinearLayout>

</LinearLayout>
